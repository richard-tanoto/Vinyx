<resources>
    <!-- Base application theme. -->
    <style name="Theme.Vinyx" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/on_secondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorOnBackground">@color/on_background</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Vinyx.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/primary</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_logo</item>
        <item name="postSplashScreenTheme">@style/Theme.Vinyx</item>
    </style>

    <style name="Theme.Vinyx.BottomNavigationLabel">
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/lato_regular</item>
    </style>

    <style name="Theme.Vinyx.HomeTitle">
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textColor">?colorOnBackground</item>
        <item name="android:textSize">@dimen/home_title</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Theme.Vinyx.HomeGenre">
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textColor">?colorOnBackground</item>
        <item name="android:textSize">@dimen/home_genre</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="Theme.Vinyx.HomeRating">
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textColor">?colorOnBackground</item>
        <item name="android:textSize">@dimen/home_rating</item>
    </style>

    <style name="Theme.Vinyx.Error">
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">?colorOnBackground</item>
        <item name="android:textSize">@dimen/error</item>
    </style>

    <style name="Theme.Vinyx.RoundedImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="Theme.Vinyx.DetailTitle">
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textColor">?colorOnBackground</item>
        <item name="android:textSize">@dimen/detail_title</item>
    </style>

    <style name="Theme.Vinyx.DetailExpandedTitle">
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/detail_title_expanded</item>
    </style>

    <style name="Theme.Vinyx.DetailCollapsedTitle">
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textColor">?colorOnPrimary</item>
        <item name="android:textSize">@dimen/detail_title_collapsed</item>
    </style>

    <style name="Theme.Vinyx.DetailGenre">
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textColor">?colorOnBackground</item>
        <item name="android:textSize">@dimen/detail_genre</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="Theme.Vinyx.DetailRating">
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textColor">?colorOnBackground</item>
        <item name="android:textSize">@dimen/detail_rating</item>
    </style>

    <style name="Theme.Vinyx.DetailDescription">
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:lineSpacingExtra">@dimen/detail_description_spacing</item>
        <item name="android:textColor">?colorOnBackground</item>
        <item name="android:textSize">@dimen/detail_description</item>
    </style>

    <style name="Theme.Vinyx.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Vinyx.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>